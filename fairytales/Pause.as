package fairytales{	import flash.display.DisplayObject;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.display.Stage;		public class Pause extends MovieClip {				[Embed(source="assets/images/pauseBg.png")]		private var PauseBgImage:Class;				[Embed(source="assets/images/play.png")]		private var PlayImage:Class;				[Embed(source="assets/images/backToMenu.png")]		private var BackToMenuImage:Class;				private var _pauseBgImage:DisplayObject;		private var _pauseBg:Sprite				private var _playImage:DisplayObject;		private var _play:Sprite				private var _backToMenuImage:DisplayObject;		private var _backToMenu:Sprite		public function Pause() {			_pauseBgImage = new PauseBgImage();			_pauseBg = new Sprite();			_pauseBg.addChild(_pauseBgImage);			addChild(_pauseBg);						_playImage = new PlayImage();			_play = new Sprite();			_play.addChild(_playImage);			_play.x = 121.5;			_play.y = 150;			addChild(_play);			_play.addEventListener(MouseEvent.CLICK, playClick);						_backToMenuImage = new BackToMenuImage();			_backToMenu = new Sprite();			_backToMenu.addChild(_backToMenuImage);			_backToMenu.x = 127.5;			_backToMenu.y = 437;			addChild(_backToMenu);			_backToMenu.addEventListener(MouseEvent.CLICK, backToMenuClick);		}				private function playClick(e:MouseEvent):void 		{			this.parent.removeChild(this);		}		private function backToMenuClick(e:MouseEvent):void 		{			(this.parent as MovieClip).logGameEnd(0);			(this.parent as MovieClip).gamePlaying = false;			(this.parent.parent as MovieClip).removeChild((this.parent.parent as MovieClip).currentGame);		}	}	}